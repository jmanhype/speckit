# Application
APP_NAME=MarketPrep API
APP_VERSION=0.1.0
DEBUG=True
ENVIRONMENT=development

# API
API_V1_PREFIX=/api/v1
ALLOWED_HOSTS=["*"]
CORS_ORIGINS=["http://localhost:3000"]

# Database
DATABASE_URL=postgresql://marketprep:devpassword@localhost:5432/marketprep_dev
DB_ECHO=False
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=100

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# Security (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=dev-secret-key-change-in-production-min-32-chars
ENCRYPTION_KEY=dev-encryption-key-must-be-32-bytes-or-longer-for-fernet
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# Square API (Get from https://developer.squareup.com/)
SQUARE_APPLICATION_ID=your-square-app-id
SQUARE_APPLICATION_SECRET=your-square-app-secret
SQUARE_ENVIRONMENT=sandbox
SQUARE_OAUTH_REDIRECT_URI=http://localhost:3000/auth/square/callback

# Weather API (Get from https://openweathermap.org/api)
OPENWEATHER_API_KEY=your-openweather-api-key

# Events API (Get from https://www.eventbrite.com/platform/api)
EVENTBRITE_API_KEY=your-eventbrite-api-key

# Stripe (Get from https://dashboard.stripe.com/apikeys)
STRIPE_API_KEY=sk_test_your_stripe_test_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Observability
SENTRY_DSN=
LOG_LEVEL=INFO
